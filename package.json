{
  "name": "ssr-lit-html",
  "version": "0.0.2",
  "main": "ssr-lit-html.js",
  "license": "MIT",
  "files": [
    "/lit-html.js",
    "/lit-html.js.map",
    "/lit-html.d.ts",
    "/lib/",
    "/src/",
    "!/src/test/"
  ],
  "scripts": {
    "build": "tsc",
    "gen-docs": "typedoc --readme none --mode modules --excludeNotExported --excludePrivate --exclude **/*_test.ts --out ./docs/api ./src",
    "test": "npm run build && wct --npm && npm run lint",
    "quicktest": "wct -l chrome -p --npm",
    "checksize": "uglifyjs lit-html.js -mc --toplevel | gzip -9 | wc -c",
    "format": "find src test | grep '\\.js$\\|\\.ts$' | xargs clang-format --style=file -i",
    "lint": "tslint --fix --project ./",
    "prepack": "npm run build",
    "nts": "ts-node --project tsconfig.json --ignore=false"
  },
  "dependencies": {
    "circular-json-es6": "^2.0.2",
    "nlit-html": "^0.9.0",
    "parse5": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^9.6.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "typings": "ssr-lit-html.d.ts"
}